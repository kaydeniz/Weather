<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Monster"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFF"/>

        <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_margin="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/settings"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlDaily"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl5Days"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rlDaily">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlWind"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rl5Days">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPressure"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rlWind">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlHumidty"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/rlPressure">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSunset"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rlHumidty">

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>